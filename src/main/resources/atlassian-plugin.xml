<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">

    <!-- project specified -->
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="TimesheetPlugin"/>

    <!-- add our web resources -->
    <web-resource key="TimesheetPlugin-resources" name="TimesheetPlugin Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>

        <resource type="download" name="TimesheetPlugin.css" location="/css/TimesheetPlugin.css"/>
        <resource type="download" name="TimesheetPlugin.js" location="/js/TimesheetPlugin.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>TimesheetPlugin</context>
    </web-resource>
    <!-- end of project specified -->


    <component-import key="ao" name="Active Objects service"
                      interface="com.atlassian.activeobjects.external.ActiveObjects">
        <description>Component to access Active Objects functionality from the plugin</description>
    </component-import>

    <ao key="ao-module">
        <description>The module configuring the Active Objects service used by this plugin</description>
        <entity>org.catrobat.jira.timesheet.impl.reference_files.Todo</entity>
    </ao>

    <!--rest url: http://markus:2990/jira/plugins/servlet/todo/list -->
    <servlet name="Todo List &amp; Add Servlet" class="org.catrobat.jira.timesheet.impl.reference_files.TodoServlet"
             key="todo-list">
        <description>A servlet to add and list todos</description>
        <url-pattern>/todo/list</url-pattern>
    </servlet>

    <!-- component keys -->
    <!-- first you can see all transactional related interfaces -->
    <component key="tx-processor" name="Transactional Annotation Processor"
               class="com.atlassian.activeobjects.external.TransactionalAnnotationProcessor">
        <decription>Processes @Transactional annotations.</decription>
    </component>

    <component key="todo-service" name="Todo Service" class="org.catrobat.jira.timesheet.impl.reference_files.TodoServiceImpl"/>
    <!-- end of transactional related interfaces -->
    <!-- end of component keys -->


</atlassian-plugin>